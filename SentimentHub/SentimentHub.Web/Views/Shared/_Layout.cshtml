<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SentimentHub</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet">
    <!-- Anime.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
</head>
<body>
    <div class="fade-in-content"> <!-- Smooth page transition wrapper -->

    @if (ViewData["HideLayout"] is bool hideLayout && hideLayout)
    {
        @RenderBody()
    }
    else
    {
        <div class="d-flex" id="wrapper">
            <!-- Sidebar -->
            <div class="bg-white border-end" id="sidebar-wrapper">
                <div class="sidebar-heading">
                    <i class="fas fa-brain fa-lg"></i> SentimentHub
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="fas fa-home me-2"></i> Anasayfa
                    </a>
                    <a href="@Url.Action("Index", "Analysis")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Analysis" ? "active" : "")">
                        <i class="fas fa-file-alt me-2"></i> Raporlarım
                    </a>
                    <a href="@Url.Action("Index", "Comparison")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Comparison" ? "active" : "")">
                        <i class="fas fa-balance-scale me-2"></i> Karşılaştırma
                    </a>
                    <a href="#" class="list-group-item list-group-item-action text-primary fw-bold" data-bs-toggle="modal" data-bs-target="#analysisModal">
                        <i class="fas fa-magic me-2"></i> Analiz Et
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-cog me-2"></i> Ayarlar
                    </a>
                     @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
                            <button type="submit" class="list-group-item list-group-item-action text-danger w-100 text-start border-0 bg-transparent">
                                <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                            </button>
                        </form>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="list-group-item list-group-item-action text-primary">
                            <i class="fas fa-sign-in-alt me-2"></i> Giriş Yap
                        </a>
                    }
                </div>
            </div>

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg navbar-custom border-bottom">
                    <div class="container-fluid">
                        <button class="btn btn-primary-custom" id="sidebarToggle">
                            <i class="fas fa-bars"></i>
                        </button>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                                <li class="nav-item">
                                    <button class="btn btn-primary-custom me-3" data-bs-toggle="modal" data-bs-target="#analysisModal">
                                        <i class="fas fa-search-plus me-1"></i> Analiz Yap
                                    </button>
                                </li>
                                <!-- User Dropdown -->
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                            <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=4e73df&color=fff" class="rounded-circle me-2" width="32" height="32">
                                            <span class="small fw-bold text-gray-600">@User.Identity.Name</span>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                            <li><a class="dropdown-item small" href="#">Profil</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-controller="Account" asp-action="Logout" method="post">
                                                    <button type="submit" class="dropdown-item small text-danger">Çıkış</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                     <li class="nav-item">
                                        <a class="nav-link fw-bold text-primary" href="@Url.Action("Login", "Account")">Giriş Yap</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>

                <!-- Page Content -->
                <main class="container-fluid px-4 py-4">
                    @RenderBody()
                </main>
            </div>
        </div>

        <!-- Analysis Modal -->
        <div class="modal fade" id="analysisModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow">
                    <div class="modal-header bg-light border-0">
                        <h5 class="modal-title fw-bold text-primary">Yeni Analiz Başlat</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <!-- Analysis Form -->
                        <form asp-controller="Analysis" asp-action="Create" method="post" id="analysisForm">
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">ANALİZ BAŞLIĞI (Opsiyonel)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-heading text-muted"></i></span>
                                    <input type="text" name="title" class="form-control border-start-0" placeholder="Örn: iPhone 15 Yorumları">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">ÜRÜN LİNKİ</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-link text-muted"></i></span>
                                    <input type="url" name="url" class="form-control border-start-0" placeholder="https://..." required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-muted small fw-bold">YORUM SAYISI LİMİTİ</label>
                                <select name="limit" class="form-select">
                                    <option value="50">50 Yorum</option>
                                    <option value="100" selected>100 Yorum</option>
                                    <option value="200">200 Yorum</option>
                                    <option value="500">500 Yorum</option>
                                </select>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary-custom py-2" id="startAnalysisBtn">
                                    Analizi Başlat <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </form>
                        
                        <!-- NEW: In-Modal Loading State (Hidden by default) -->
                        <div id="analysisLoadingState" class="d-none flex-column align-items-center justify-content-center py-4">
                            <div class="position-relative mb-3" style="width: 120px; height: 120px;">
                                <svg class="progress-ring" width="120" height="120">
                                    <circle class="progress-ring__circle" stroke="#e6e6e6" stroke-width="8" fill="transparent" r="52" cx="60" cy="60"/>
                                    <circle class="progress-ring__bar" stroke="#4e73df" stroke-width="8" fill="transparent" r="52" cx="60" cy="60"/>
                                </svg>
                                <div class="position-absolute top-50 start-50 translate-middle text-center">
                                    <h3 class="fw-bold mb-0 text-primary" id="progressPercent">0%</h3>
                                </div>
                            </div>
                            <h6 class="fw-bold text-dark mb-1">Analiz Ediliyor...</h6>
                            <p class="text-muted small mb-0">Yorumlar toplanıyor ve yapay zeka ile işleniyor.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- jQuery (if needed) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/dashboard.js"></script>
    </div> <!-- End .fade-in-content -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
