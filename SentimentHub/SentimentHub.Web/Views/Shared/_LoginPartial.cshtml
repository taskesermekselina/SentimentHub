@using Microsoft.AspNetCore.Identity
@using SentimentHub.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var username = User.Identity?.Name ?? "U";
    var initial = username.Substring(0, 1).ToUpper();

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
             <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 35px; height: 35px; font-weight: bold;">
                 @initial
             </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 p-2" style="min-width: 200px;">
            <li class="px-3 py-2 border-bottom mb-2">
                <small class="text-muted d-block">Hesap</small>
                <div class="fw-bold text-dark">@username</div>
            </li>
            <li><a class="dropdown-item rounded-3" href="#"><i class="bi bi-person me-2"></i>Profilim</a></li>
            <li><a class="dropdown-item rounded-3" asp-controller="Analysis" asp-action="Index"><i class="bi bi-bar-chart me-2"></i>Raporlarım</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="d-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item rounded-3 text-danger"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white fw-bold me-3 opacity-75 hover-opacity-100" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-info text-white rounded-pill px-4 fw-bold shadow-sm hover-scale" asp-controller="Account" asp-action="Login">Giriş Yap</a>
    </li>
}
</ul>
